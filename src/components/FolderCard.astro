---
const {icon, title, last_note, last_updated_at} = Astro.props;
---
<div class="bg-primary p-4 mx-5 my-4 rounded-lg flex gap-x-4">
  <span
    class="flex items-center aspect-square"
    style={{
      fontSize: "44px",
      lineHeight: "44px",
    }}
    >
    {icon}
  </span>

  <span class="grow text-border  min-w-0 truncate">
    <span class="text-text-primary flex justify-between text-xl">
      {title}

      <span class="text-base">
        {last_updated_at}
      </span>
    </span>

    <span class="whitespace-nowrap">
      {last_note}
    </span>
  </span>
</div>
